<% resource_name = prompt("Enter the resource name:", default: "user") %>
<% devise_mapping = Devise.mappings[resource_name.to_sym] %>

<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", send("new_#{resource_name}_session_path") %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", send("new_#{resource_name}_registration_path") %><br />
<% end %>
