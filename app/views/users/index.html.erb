<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <h2>All Users</h2>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
            <!-- Add more user attributes as needed -->
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= User.roles.key(user.role)&.humanize || 'N/A' %></td>
              <td>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %>
                <%= link_to 'Remove', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to remove this user?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to 'Add New User', new_user_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
