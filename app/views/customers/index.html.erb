<h1>Customer List</h1>

<% if user_signed_in? %>
  <div class="mb-3">
    <%= link_to "Add Customer", new_customer_path, class: "btn btn-primary" %>
  </div>
<% end %>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Company Name</th>
      <th>Department</th>
      <% if user_signed_in? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= customer.company_name %></td>
        <td><%= customer.department %></td>
        <% if user_signed_in? %>
          <td>
            <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-secondary btn-sm" %>
            <%= link_to "Delete", customer_path(customer), method: :delete, data: { confirm: 'Are you sure you want to delete this customer?' }, class: "btn btn-danger btn-sm" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
